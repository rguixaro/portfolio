---
interface Props {
	text: string
	icon: string
}

const { text, icon } = Astro.props
---

<a
	target='_blank'
	class='w-fit px-3 py-2 group rounded border flex gap-2 items-center border-neutral-200 dark:border-neutral-700 hover:bg-neutral-100 hover:dark:bg-neutral-800 blend'
>
	{
		icon && (
			<svg height={20} width={20}>
				<use href={`/stack.svg#${icon}`} />
			</svg>
		)
	}
	<span
		class='cursor-default select-none text-sm capitalize text-neutral-500 dark:text-neutral-400 group-hover:text-black group-hover:dark:text-white blend'
	>
		{text}
	</span>
</a>
