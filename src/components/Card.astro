---
import { Icon } from 'astro-icon/components'

const { timeframe, title, description, url, tags, url_name, location } =
  Astro.props;
---

<div class="border border-primary w-full hover:shadow-lg transition-all duration-200 my-4 rounded-3xl p-5 shadow-md">
  <div class="card-body">
    <div class="grid grid-cols-3 gap-4 mb-2">
      <div class="self-start col-span-2 justify-self-start text-left">
        <h1 class="uppercase card-title font-extrabold tracking-tighter md:text-2xl">{title}</h1>
        {location && (
          <div class="flex items-center mt-2">
            <p class="text-sm  font-light text-secondary">{location}</p>
          </div>
        )}
      </div>

      <div class="self-center justify-self-end">
        {timeframe && (
          <div class="w-max h-max text-center inline-block align-middle shadow-md border border-black/55 rounded-xl p-1">
            {timeframe}
          </div>
        )}
      </div>
    </div>

    <div class="grid grid-cols-3 gap-4 place-items-center">
      <div class="self-start col-span-2 justify-self-start text-left">
        <article class="prose">
          <Fragment set:html={description}></Fragment>
        </article>
        {Array.isArray(tags) && (
          <div class="flex flex-wrap content-around gap-2 my-4">
            {tags.map((item) => (
              <span class="text-center inline-block align-middle w-max h-max text-sm shadow-md mb-1 border border-black/55 rounded-xl p-1" :key={item}>{item}</span>
            ))}
          </div>
        )}
      </div>

      <div class="self-center justify-self-end">
        <a href={url} target="_blank" class="link link-hover text-sm text-right flex justify-center items-center">
          {url_name}
        {url !== "#" && <Icon name="carbon:link" class="w-4 h-4 ml-2" />}
        </a>
      </div>
    </div>
  </div>
</div>